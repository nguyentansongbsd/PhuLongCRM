<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" ColumnSpacing="0"
      xmlns:controls="clr-namespace:PhuLongCRM.Controls" ColumnDefinitions="*,Auto"
      x:Class="PhuLongCRM.Controls.DatePickerBoderControl">
    <controls:DatePickerBorder x:Name="datePicker" Grid.ColumnSpan="2"  OnChangeState="datePicker_OnChangeState" DateSelected="datePicker_DateSelected"/>
    <controls:EntryNoneBorderControl x:Name="entry" Grid.Column="0" IsEnabled="False" FontSize="15" Margin="8,2"/>
    <Label x:Name="btnClear" Grid.Column="1" Text="&#xf057;" IsVisible="false"  FontFamily="FontAwesomeRegular" TextColor="Gray" FontSize="15" Padding="8,6" Margin="0,0,2,0" VerticalOptions="Center" >
        <Label.GestureRecognizers>
            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ClearDate_Tapped"/>
        </Label.GestureRecognizers>
    </Label>
</Grid>
